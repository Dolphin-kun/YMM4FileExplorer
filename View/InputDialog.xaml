<Window x:Class="YMM4FileExplorer.View.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YMM4FileExplorer.View"
        mc:Ignorable="d"
        Title="タブの名前"
        ResizeMode="NoResize" 
        Height="90" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ResponseTextBox" Grid.Row="0"
                 VerticalContentAlignment="Center"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="閉じる" Width="75" Height="25" IsDefault="True" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
