<UserControl x:Class="YMM4FileExplorer.FileExplorerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YMM4FileExplorer"
             xmlns:theme="clr-namespace:YukkuriMovieMaker.Theme;assembly=YukkuriMovieMaker.Plugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="MyListViewItemStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE8F5FE"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFCDE6F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="{DynamicResource {x:Static theme:YMM4Colors.IconBorderBrushKey}}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDEDEDE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TreeView Name="DirectoryTree"
                  SelectedItemChanged="DirectoryTree_SelectedItemChanged"/>


        <ListView Name="FileList" 
                  Grid.Column="1"
                  PreviewMouseLeftButtonDown="FileList_PreviewMouseLeftButtonDown"
                  PreviewMouseMove="FileList_PreviewMouseMove"
                  MouseDoubleClick="FileList_MouseDoubleClick"
                  Foreground="{DynamicResource {x:Static theme:YMM4Colors.IconBrushKey}}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="230">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Name" 
                                                  Click="GridViewColumnHeader_Click"
                                                  Background="{DynamicResource {x:Static theme:YMM4Colors.IconBorderBrushKey}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="名前"/>
                                    <TextBlock Text="" Foreground="Gray" Margin="4,0,0,0"/>
                                </StackPanel>
                            </GridViewColumnHeader>
                        </GridViewColumn.Header>
                        
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static theme:YMM4Colors.IconBrushKey}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="100">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Type" 
                                                  Click="GridViewColumnHeader_Click"
                                                  Background="{DynamicResource {x:Static theme:YMM4Colors.IconBorderBrushKey}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="種類"/>
                                    <TextBlock Text="" Foreground="Gray" Margin="4,0,0,0"/>
                                </StackPanel>
                            </GridViewColumnHeader>

                        </GridViewColumn.Header>
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Type"/>
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>

                    <GridViewColumn Width="100">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Size" 
                                                  Click="GridViewColumnHeader_Click"
                                                  Background="{DynamicResource {x:Static theme:YMM4Colors.IconBorderBrushKey}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="サイズ"/>
                                    <TextBlock Text="" Foreground="Gray" Margin="4,0,0,0"/>
                                </StackPanel>
                            </GridViewColumnHeader>
                        </GridViewColumn.Header>
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Size"/>
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>
                </GridView>

            </ListView.View>
        </ListView>

        <Popup x:Name="PreviewPopup"
                Placement="Mouse"
                AllowsTransparency="True"
                PopupAnimation="Fade"
                StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="8" Width="300" MaxHeight="400">
                <ContentPresenter x:Name="PreviewContent"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
